{{#extends 'base'}}

{{#block 'content'}}

<form method="GET">
    {{{searchForm}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Media</th>
            <th>Tags</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Image</th>
            <th>Date</th>
            <th>Available Quantity</th>
            <th>Height(cm)</th>
            <th>Width(cm)</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each posters}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.title}}
                </td>
                <td>
                    <span class="badge bg-primary">{{this.mediaproperty.name}}</span>
                </td>
                <td>
                    {{#each this.tags}}
                    <span class="badge bg-primary">{{this.name}}</span>
                    {{/each}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                {{!-- <td>
                    {{#if this.image_url}}
                    <img src="{{this.image_url}}"/>
                    {{/if}}
                </td> --}}
                <td>
                    {{this.date}}
                </td>
                <td>
                    {{this.stock}}
                </td>
                <td>
                    {{this.height}}
                </td>
                <td>
                    {{this.width}}
                </td>
                <td>
                <a href="/posters/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/posters/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}