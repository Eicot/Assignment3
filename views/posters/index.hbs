<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

{{#extends 'base'}}

{{#block 'content'}}


<form method="GET">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    {{{searchForm}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>

<div class="card-containter">
  <div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Media</th>
            <th>Tags</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Image</th>
            <th>Date</th>
            <th>Quantity</th>
            <th>Height(cm)</th>
            <th>Width(cm)</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each posters}}
            <tr>
            
                <td>
                    {{this.title}}
                </td>
                <td>
                    {{this.mediaproperty.name}}
                </td>
                <td>
                    {{#each this.tags}}
                    <span class="badge bg-primary">{{this.name}}</span>
                    {{/each}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    {{#if this.image_url}}
                    <img src="{{this.image_url}}" class="std"/>
                    {{/if}}
                </td>
                <td>
                    {{this.date}}
                </td>
                <td>
                    {{this.stock}}
                </td>
                <td>
                    {{this.height}}
                </td>
                <td>
                    {{this.width}}
                </td>
                <td>
                <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>
                <a href="/posters/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/posters/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
            </tr>
        {{/each}}
    </tbody>
</table>
</div>
</div>
{{/block}}

{{/extends}}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>
